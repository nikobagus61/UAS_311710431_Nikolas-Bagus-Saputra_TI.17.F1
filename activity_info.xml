<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/rumahsakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:padding="7dp"
                android:text="INFO SEPUTAR KESEHATAN"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kesehatan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kesehatan_gigi" />

            <View
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/otak" />

            <View
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kesehatanmata" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>